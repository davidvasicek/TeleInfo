<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12dp"
                            android:text="Editace předmětu"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="0dp"
                            android:textStyle="bold"
                            android:id="@+id/administrationBottomSheetDialogSubjectEditNewTextViewTitle"/>




                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Zkrácený název předmětu"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    >

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/administrationBottomSheetDialogSubjectEditNewTextInputEditTextShortcut"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="14dp"
                                            android:inputType="text"
                                            android:text="PJ"
                                            />
                                </com.google.android.material.textfield.TextInputLayout>



                        </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Úpný název předmětu"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    >

                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/administrationBottomSheetDialogSubjectEditNewTextInputEditTextFullName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="14dp"
                                            android:inputType="text"
                                            android:text="Programovací jazyky"
                                            />
                                </com.google.android.material.textfield.TextInputLayout>



                        </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12dp"
                            android:text="Obor"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="0dp"
                           />




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp">




                        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                            android:id="@+id/administrationBottomSheetDialogSubjectEditNewThemedToggleButtonGroupFieldOfStudy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flexWrap="wrap">

                                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                                    android:id="@+id/administrationBottomSheetDialogSubjectEditNewThemedButtonTag1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_margin="3dp"
                                    app:toggle_text="IKT" />

                                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                                    android:id="@+id/administrationBottomSheetDialogSubjectEditNewThemedButtonTag2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_margin="3dp"
                                    app:toggle_text="IT" />

                                <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                                    android:id="@+id/administrationBottomSheetDialogSubjectEditNewThemedButtonTag3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_margin="3dp"
                                    app:toggle_text="IKT a IT" />


                                <!-- ... -->

                        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>


                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <Button
                                    android:id="@+id/administrationBottomSheetDialogSubjectEditNewButtonSave"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginBottom="20dp"
                                    android:tag="tagForDeleteButton"
                                    android:text="Uložit"
                                    android:textSize="12dp" />

                        </LinearLayout>



                </LinearLayout>



        </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zabezpečení"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"
        android:tag="tagForDelete"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:textColor="@color/text_primary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:text="PIN"
        android:tag="tagForDelete"
        android:textSize="12dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="Umožňuje uživateli přistupovat do aplikace na základě zadaného pinu"
        android:tag="tagForDelete"
        android:textSize="12dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:gravity="center">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zadejte váš nový pin kód"
                        android:gravity="center"
                        android:id="@+id/guideFragmentAuthByPinTextViewInstructions"
                        android:textColor="@color/text_secondary"
                        android:textSize="11dp"
                        android:tag="tagForDelete"
                        android:textAllCaps="true"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/guideFragmentAuthByPinLinearLayoutShowPins"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/guideFragmentAuthByPinLinearLayoutPins"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/guideFragmentAuthByPinLinearLayoutShowPins1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/guideFragmentAuthByPinLinearLayoutPins1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                </LinearLayout>





                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">

                        <Button
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn1"
                            android:text="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"
                            />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn2"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:text="2"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"

                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn3"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:text="3"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"
                            />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn4"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:text="4"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn5"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:text="5"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn6"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:text="6"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"
                            />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn7"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:text="7"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn8"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:text="8"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn9"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:text="9"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"
                            />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <FrameLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewOK"
                            android:layout_height="45dp"
                            android:layout_width="45dp"
                            android:text="OK"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:tag="tagForDelete"
                            android:textColor="@color/text_primary"
                            />


                        <ImageView
                            android:id="@+id/guideFragmentAuthByPinImageViewSuccessStatus"
                            android:layout_height="45dp"
                            android:layout_width="45dp"
                            android:text="fp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/guideFragmentAuthByPinTextViewBtn0"
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:text="0"
                            android:gravity="center"
                            android:layout_gravity="center"

                            android:textSize="20dp"
                            android:tag="tagForDelete"
                            android:textColor="#212121"
                            android:background="?selectableItemBackgroundBorderless"
                            />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/guideFragmentAuthByPinImageViewBtnDelete"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:text="fp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:src="@drawable/backspace"
                            android:background="?selectableItemBackgroundBorderless"
                            />

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>







        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/guideFragmentAuthByPinButtonResetPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Resetovat nový pin"
                android:textColor="@color/text_primary"
                android:textSize="12dp"
                android:tag="tagForDeleteButton"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="|"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:tag="tagForDelete"
                android:textColor="#212121"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="?selectableItemBackgroundBorderless"
                />


            <Button
                android:id="@+id/guideFragmentAuthByPinButtonShowPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Ukázat pin"
                android:textColor="@color/text_primary"
                android:textSize="12dp"
                android:tag="tagForDeleteButton" />


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/guideFragmentAuthByPinButtonPrevious"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?selectableItemBackgroundBorderless"
                            android:tag="tagForDeleteButton"
                            android:text="Zpět"
                            android:textColor="@color/text_primary"
                            android:textSize="12dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2/6"
                            android:gravity="center"
                            android:tag="tagForDelete"
                            android:textSize="14dp"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/guideFragmentAuthByPinButtonNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:tag="tagForDeleteButton"
                            android:text="Další"
                            android:textColor="@color/text_primary"
                            android:textSize="12dp"
                            />

                    </LinearLayout>


                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>



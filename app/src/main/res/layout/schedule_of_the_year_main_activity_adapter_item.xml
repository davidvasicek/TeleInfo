<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_marginBottom="2.5dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.2.2022"
            android:gravity="left"
            android:textColor="@color/text_primary"
            android:textSize="12dp"
            android:id="@+id/scheduleOfTheYearTextViewDateFrom"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_marginBottom="2.5dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="left"
            android:textColor="@color/text_primary"
            android:textSize="12dp"
            android:id="@+id/scheduleOfTheYearTextViewDateSeparator"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_marginBottom="2.5dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14.2.2022"
            android:gravity="left"
            android:textColor="@color/text_primary"
            android:textSize="12dp"
            android:id="@+id/scheduleOfTheYearTextViewDateTo"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_marginBottom="2.5dp"
            android:layout_marginTop="2.5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="za 14 dní"
            android:gravity="right"
            android:textColor="@color/text_primary"
            android:textSize="12dp"
            android:id="@+id/scheduleOfTheYearTextViewNumberOfDayeTo"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"/>




    </LinearLayout>








    <TextView
        android:layout_marginBottom="2.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:tag="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Velikonoční prázdniny + Velikonoční pondělí"
            android:gravity="center_vertical"
            android:textColor="@color/text_primary"
            android:textSize="11dp"
            android:textStyle="normal"
            android:id="@+id/scheduleOfTheYearTextViewEvent"
        android:textAllCaps="true"/>


    <TextView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:layout_marginTop="10dp"/>

</LinearLayout>
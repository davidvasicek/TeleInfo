<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:text="VÍTEJTE V APLIKACI"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/loginWithKeyActivityTextVifdfdewTitle"
                android:textColor="@color/text_primary"
                android:textSize="16dp"
                android:tag="tagForDelete"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="T e l e I n f o"
                android:gravity="center"

                android:id="@+id/loginWithKeyActivityTextViewTitle"
                android:textColor="@color/text_primary"
                android:textSize="24dp"
                android:tag="tagForDelete"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/activityLoginWithKxeyTextViewKeyRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prosím, načtěte QR kód s Vašimi přihlašovacími údaji"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_text"
                android:tag="tagForDelete"/>

            <Button
                android:id="@+id/activityLoginWithKeyButtcconLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:foregroundGravity="bottom"
                android:tag="tagForDeleteButton"
                android:text="NASKENUJ KÓD" />


            <TextView
                android:id="@+id/activityLoginWithKxeycccccTextViewKeyRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:tag="tagForDelete"
                android:text="Probíhá přihlašování uživatele"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_text" />

            <TextView
                android:id="@+id/activityLoginWithKxeyccTextViewKeyRequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:tag="tagForDelete"
                android:text=""
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_text" />


            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/rozvrh_loadingIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                style="@style/AVLoadingIndicatorView"
                android:visibility="visible"
                app:indicatorName="BallClipRotatePulseIndicator"
                app:indicatorColor="@color/text_secondary"
                android:layout_gravity="center_horizontal"
                />



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.15">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/activityLoginWithKeyLinearLayoutAuthStatus"
                    android:layout_weight="0.85">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="-"
                        android:textColor="@color/text_secondary"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:id="@+id/activityLoginWithKeyImageViewAuthStatusIcon" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_marginBottom="50dp">



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/activityLoginWithKeyTextViewLostKey"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Příhlásit se pomocí údajů"
                            android:gravity="center"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_text"
                            android:tag="tagForDelete"
                            />

                    </LinearLayout>



                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

